{#
/**
 * @file
 * Custom theme implementation for subcategory filters.
 *
 * Available variables:
 * - filters: An array of data.
 *
 * @ingroup themeable
 */
#}
<div class="d-flex flex-row align-items-center">

  <div class="filters-wrapper">
    <div class="filters">
      <div class="label">{{ 'Filtered by:'|t }}</div>
      {% for key, value in filters %}
      <div class="filter">{{ value }}<a href="#" data-id="{{ key }}" class="remove"><i class="fa fa-close" aria-hidden="true"></i></a></div>
      {% endfor %}
    </div>
  </div>

  <div class="reset-wrapper ml-auto">
    <a href="#" class="btn btn-sm btn-light">{{ 'Clear All'|t }}</a>
  </div>

</div>