{#
/**
 * @file
 * Default theme implementation to display a formatted image field with its title as a caption.
 *
 * Available variables:
 * - caption: The image title to be used as a caption
 *
 * @see template_preprocess_openy_hours_formatter()
 *
 * @ingroup themeable
 */
#}
{% if hours %}
<div class="today-hours">
  {{ hours }}
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
    <div class="sr-only">{{ 'View all hours'|t }}</div>
    <span class="show-text" aria-hidden="true">{{ 'View all hours'|t }}</span>
    <span class="hide-text" aria-hidden="true">{{ 'View Less'|t }}</span>
  </a>
  <div class="branch-hours">
    {{ week }}
  </div>
</div>
{% endif %}
